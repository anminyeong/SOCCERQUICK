<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.soccerquick2.MyClub.club_info_list"
    android:padding="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="닉네임 : "
        android:id="@+id/textView20"
        android:layout_marginLeft="5dp"
        android:textSize="17dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/num"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/num"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        android:layout_marginTop="5dp"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="dddd"
        android:id="@+id/nick"

        android:textSize="17dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView20"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="카톡 : "
        android:id="@+id/textView23"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/nick"
        android:layout_marginLeft="7dp"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/kakao"

        android:textSize="17dp"
        android:layout_alignTop="@+id/textView23"
        android:layout_toEndOf="@+id/textView23" />

    <Button
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="수락"
        android:id="@+id/button6"
        android:textSize="10dp"
        android:layout_toStartOf="@+id/button9"
        android:layout_alignTop="@+id/button9"
        android:layout_marginLeft="5dp"
        android:visibility="gone" />

    <Button
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="거절"
        android:id="@+id/button9"
        android:textSize="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />

</RelativeLayout>
